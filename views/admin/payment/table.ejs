<table id="example2" class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>No.</th>
        <th>Tipe Pembayaran</th>
        <th>Bank</th>
        <th>Status</th>
        <th>Aksi</th>
      </tr>
    </thead>
    <tbody>
      <% for( let i = 0; i < payments.length; i++ ) { %>
        <tr>
          <td><%= i + 1 %></td>
          <td><%= payments[i].typePayment %></td>
          <td>
            <% payments[i].banks.forEach(bank => { %>
             <span class="badge badge-info d-block my-1">
                <%= bank.nameOwner %> - <%= bank.nameBank %> [<%= bank.noRekening %>]
             </span>
            <% }) %>
          </td>
          <td class="text-center">
            <% if (payments[i].status === 'Y') { %>
                <span class="badge badge-success">
                    Aktif
                </span>
            <% } else { %>
                <span class="badge badge-danger">
                    Tidak Aktif
                </span>
            <% } %>
          </td>
          <td>
            <form action="/payment/delete/<%= payments[i]._id %>?_method=DELETE" method="POST">
              <a href="/payment/edit/<%= payments[i]._id %>" class="btn btn-warning">
                <i class="fas fa-pencil-alt"></i>
                Ubah
              </a>
              <button class="btn btn-danger">
                <i class="fas fa-trash"></i>
                Hapus
              </button>
            </form>
          </td>
        </tr>
      <% } %>
      
  
  
  
  
  
  
  
  
    </tbody>
  </table>
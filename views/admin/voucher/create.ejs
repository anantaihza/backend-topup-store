<%- include('../../partials/header.ejs') -%>
    <%- include('../../partials/navbar.ejs') -%>
        <%- include('../../partials/sidebar.ejs') -%>

            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <div class="container">
                        <div class="row mb-2">
                            <div class="col-sm-6">
                                <h1>Voucher</h1>
                            </div>
                            <div class="col-sm-6">
                                <ol class="breadcrumb float-sm-right">
                                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                                    <li class="breadcrumb-item"><a href="/voucher">Voucher</a></li>
                                    <li class="breadcrumb-item active">Tambah</li>
                                </ol>
                            </div>
                        </div>
                    </div><!-- /.container-fluid -->
                </section>

                <!-- Main content -->
                <section class="content">
                    <div class="container">
                        <div class="row">
                            <div class="col-12">
                                <!-- /.card-header -->
                                <div class="card-body">
                                    <!-- general form elements -->
                                    <div class="card card-primary">
                                        <div class="card-header">
                                            <h3 class="card-title">Form Voucher</h3>
                                        </div>
                                        <!-- /.card-header -->
                                        <!-- form start -->
                                        <form action="/voucher/create" method="POST" enctype="multipart/form-data">
                                            <div class="card-body">
                                                <div class="form-group">
                                                    <label for="nameGame">Nama Game</label>
                                                    <input type="text" class="form-control" id="nameGame"
                                                        name="nameGame" placeholder="Masukan nama game...." required>
                                                </div>

                                                <div class="form-group">
                                                    <label for="category">Kategori</label>
                                                    <select class="form-control select2" style="width: 100%;"
                                                        id="category" name="category" required>
                                                        <option selected="selected">Pilih Kategori</option>
                                                        <% category.forEach(category=> { %>
                                                            <option value="<%= category._id %>">
                                                                <%= category.nameCategory %>
                                                            </option>
                                                            <% }) %>
                                                    </select>
                                                </div>

                                                <div class="form-group">
                                                    <label for="nominals">Nominal</label>
                                                    <div class="select2-purple">
                                                        <select class="form-control select2" multiple="multiple"
                                                            data-placeholder="Pilih Nominal" style="width: 100%;"
                                                            id="nominals" name="nominals" required>

                                                            <% nominal.forEach(nominal=> { %>
                                                                <option value="<%= nominal._id %>">
                                                                    <%= nominal.coinName %> - <%= nominal.price %>
                                                                </option>
                                                                <% }) %>
                                                        </select>
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <label for="image">Thumbnail</label>
                                                    <input type="file" class="form-control" id="image" name="image"
                                                        placeholder="Masukan Gambar">
                                                    <br>
                                                    <img src="" id="preview">
                                                </div>

                                            </div>
                                            <!-- /.card-body -->

                                            <div class="card-footer">
                                                <button type="submit" class="btn btn-primary">Tambah</button>
                                            </div>
                                        </form>
                                    </div>
                                    <!-- /.card -->
                                </div>
                                <!-- /.card-body -->


                            </div>
                            <!-- /.col -->
                        </div>
                        <!-- /.row -->
                    </div>
                    <!-- /.container-fluid -->
                </section>
                <!-- /.content -->
            </div>

            <%- include('../../partials/footer.ejs') -%>
                <%- include('../../partials/js.ejs') -%>

                    <script>
                        function readURL(input) {
                            if (input.files && input.files[0]) {
                                const reader = new FileReader();

                                reader.onload = (e) => {
                                    $("#preview").attr('src', e.target.result)
                                    $('#preview').attr('width', '15%');
                                    $('#preview').attr('height', '15%');
                                }

                                reader.readAsDataURL(input.files[0])
                            }
                        }

                        $('#image').change(function () {
                            readURL(this)
                        })
                    </script>